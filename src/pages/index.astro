---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import GallerySection from '../components/GallerySection.astro';
import AboutSection from '../components/AboutSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import ContactSection from '../components/ContactSection.astro';

// Import services data for structured data
import servicesData from '../data/services.json';
let services = servicesData.services;

const homepageStructuredData = {
  "@context": "https://schema.org",
  "@type": ["Person", "Artist"],
  name: "Katriga",
  alternateName: "Katriga Arts",
  description: "Digital artist specializing in character illustrations, fantasy art, and custom commissions",
  url: "https://katriga.art",
  image: "https://katriga.art/img/banner.webp",
  sameAs: [
    "https://twitter.com/katriga",
    "https://instagram.com/katriga_arts"
  ],
  jobTitle: "Digital Artist",
  knowsAbout: [
    "Digital Art",
    "Character Design", 
    "Fantasy Illustration",
    "Commission Art",
    "Digital Painting"
  ],
  offers: services
    .filter(service => !service.filler && service.title !== "Other Services")
    .map(service => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Product",
        "name": service.title,
        "description": service.description,
        "image": [service.img1, service.img2, service.img3].filter(Boolean),
        "category": "Art & Design Services",
        "brand": {
          "@type": "Brand",
          "name": "Katriga Arts"
        }
      },
      "price": service.price.replace(/[~$]/g, "").split("â€“")[0].trim(),
      "priceCurrency": "USD",
      "priceValidUntil": new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toISOString().split('T')[0],
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Person",
        "name": "Katriga"
      }
    }))
};

---

<MainLayout structuredData={homepageStructuredData}>
  <div class="splide__slide">
    <HeroSection />
  </div>
  <div class="splide__slide">
    <GallerySection />
  </div>
  <div class="splide__slide">
    <AboutSection />
  </div>
  <div class="splide__slide">
    <ServicesSection />
  </div>
  <!--<div class="splide__slide">
    <TestimonialsSection />
  </div> -->
  <div class="splide__slide">
    <ContactSection />
  </div>
</MainLayout>