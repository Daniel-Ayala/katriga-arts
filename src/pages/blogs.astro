---
import PageLayout from '../layouts/PageLayout.astro';
import { blogItems, type BlogItem } from '../data/blogs';
---

<PageLayout>
  <!-- Heading -->
  <div class="relative text-center mb-12">
    <h2
      class="relative text-4xl md:text-5xl lg:text-6xl font-bold text-white z-10 animate-reveal"
    >
      <span
        class="bg-clip-text text-transparent bg-gradient-to-r from-white to-yellow-300"
      >
        Photography Insights
      </span>
    </h2>
    <p
      class="text-lg text-neutral-200 max-w-2xl mx-auto font-light mt-4"
    >
      Explore tips, techniques, and trends in photography to elevate your craft.
    </p>
  </div>

  <!-- Blogs Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {blogItems.map((blog) => (
      <div
        class="blog-item bg-neutral-800/50 rounded-xl overflow-hidden shadow-lg hover:shadow-yellow-300/20 transition-all duration-300 animate-reveal group"
        id={`blog-${blog.id}`}
      >
        <a href={`/blog/${blog.slug}`}>
          <img
            src={blog.imageSrc}
            alt={blog.imageAlt}
            class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
            loading="lazy"
          />
        </a>
        <div class="p-6">
          <div
            class="flex items-center text-neutral-400 text-sm mb-2"
          >
            <i class="fas fa-calendar-alt mr-2"></i>
            <span>{blog.date}</span>
          </div>
          <a href={`/blog/${blog.slug}`}>
            <h3
              class="text-xl font-semibold text-white group-hover:text-yellow-300 mb-3"
            >
              {blog.title}
            </h3>
          </a>
          <p
            class="text-neutral-200 text-base mb-4 line-clamp-3"
          >
            {blog.description}
          </p>
          <a
            href={`/blog/${blog.slug}`}
            class="inline-flex items-center text-yellow-300 hover:text-yellow-400 font-medium transition-colors"
          >
            Read More
            <i class="fas fa-arrow-right ml-2"></i>
          </a>
        </div>
      </div>
    ))}
  </div>

  <!-- Load More -->
  <div class="container mx-auto px-4 text-center mt-12">
    <button
      class="relative bg-transparent border-2 border-yellow-300 text-yellow-300 px-8 py-3 rounded-md text-lg font-medium hover:bg-yellow-300 hover:text-black transition-all duration-300 overflow-hidden group"
    >
      <span class="relative z-10">Load More</span>
      <span
        class="absolute inset-0 bg-yellow-300 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
      ></span>
    </button>
  </div>
</PageLayout>