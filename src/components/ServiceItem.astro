---
interface Props {
  icon: string;
  title: string;
  description: string;
  price: string;
  duration: string;
}

const { icon, title, description, price, duration } = Astro.props;
---

<div
  class="service-item bg-neutral-800/50 rounded-xl p-6 shadow-lg hover:shadow-white/20 transition-all duration-300 animate-reveal group"
>
  <div class="flex items-center mb-4">
    <i class={`fas ${icon} text-3xl text-white mr-3`}></i>
    <h3 class="text-xl font-semibold text-white">{title}</h3>
  </div>
  <p class="text-neutral-200 text-base mb-4">{description}</p>
  <div class="flex justify-between items-center mb-4">
    <span class="text-white font-medium">{price}</span>
    <span class="text-neutral-400 text-sm">{duration}</span>
  </div>
</div>