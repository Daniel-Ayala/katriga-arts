---
import ServiceItem from './ServiceItem.astro';
import Copyright from './Copyright.astro';

// Interface definition
interface Service {
  icon: string;
  title: string;
  description: string;
  price: string;
  duration: string;
}
interface HeadingService {
  title: string;
  description: string;
}

// Data section
const services: Service[] = [
  {
    icon: 'fa-portrait',
    title: 'Portrait Photography',
    description: 'Timeless portraits that capture your personality, perfect for individuals, families, or professionals.',
    price: '$200',
    duration: '1-hour session'
  },
  {
    icon: 'fa-camera-retro',
    title: 'Event Photography',
    description: 'Capture every moment of your special events, from weddings to corporate gatherings.',
    price: '$500',
    duration: '4-hour coverage'
  },
  {
    icon: 'fa-mountain',
    title: 'Landscape Photography',
    description: 'Breathtaking nature and cityscape photography for your home or office decor.',
    price: '$350',
    duration: 'Half-day session'
  },
  {
    icon: 'fa-ring',
    title: 'Wedding Photography',
    description: 'Comprehensive wedding coverage to preserve your special day forever.',
    price: '$1,200',
    duration: 'Full-day coverage'
  },
  {
    icon: 'fa-utensils',
    title: 'Food Photography',
    description: 'Mouth-watering food photography for restaurants and culinary businesses.',
    price: '$300',
    duration: '2-hour session'
  },
  {
    icon: 'fa-tshirt',
    title: 'Fashion Photography',
    description: 'High-end fashion photography for brands, models, and designers.',
    price: '$450',
    duration: '3-hour session'
  }
];

const sectionData: HeadingService = {
  title: "Our Services",
  description: "Discover our range of professional photography services tailored to capture your unique moments."
};
---

<div class="section h-screen overflow-y-auto py-24 flex flex-col bg-gradient-to-b from-[var(--color-bg)] to-neutral-900 scrollable lg:px-16 xl:px-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="relative text-4xl md:text-5xl lg:text-6xl font-bold text-white z-10 animate-reveal mb-3">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-white">
          {sectionData.title}
        </span>
      </h2>
      <p class="text-lg text-neutral-200 max-w-2xl mx-auto font-light">
        {sectionData.description}
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <ServiceItem {...service} />
      ))}
    </div>
  </div>
  <Copyright />
</div>